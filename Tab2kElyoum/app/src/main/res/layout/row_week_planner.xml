<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_week_planner"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/fav"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/week_planner_img_mealImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:background="@drawable/circularsearch"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/week_planner_tv_mealName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="14dp"
        android:inputType="textMultiLine|textImeMultiLine"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@+id/week_planner_img_mealImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/week_planner_tv_mealArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/week_planner_img_mealImg"
        app:layout_constraintTop_toBottomOf="@+id/week_planner_tv_mealName" />

    <ImageButton
        android:id="@+id/btn_removeWeekPlannerItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/circular"
        android:elevation="20dp"
        android:scaleType="center"
        android:src="@drawable/remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>